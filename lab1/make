CXX = g++
CXXFLAGS = -O2 -Wall -std=c++17 -DNDEBUG
SOURCES = compare.cpp gauss.cpp hilbert.cpp LUsq.cpp main.cpp matrix_func.cpp matrix_profile.cpp menu.cpp
OBJECTS = $(SOURCES:.cpp=.o)
EXEC = LUsq

all: $(EXEC)

$(EXEC): $(OBJECTS)
    $(CXX) $(CXXFLAGS) -o $(EXEC) $(OBJECTS)

.cpp.o:
    $(CXX) $(CXXFLAGS) -c $< -o $@

clean:
    rm -f $(OBJECTS) $(EXEC)